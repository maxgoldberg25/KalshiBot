# ───────────────────────────────────────────────────────────
# Kalshi vs Sportsbook Odds Scanner – Environment Configuration
# Copy to .env and fill in your credentials.
# ───────────────────────────────────────────────────────────

# ── Kalshi ──────────────────────────────────────────────────
KALSHI_ODDS_KALSHI_API_KEY_ID=your-kalshi-api-key-id
KALSHI_ODDS_KALSHI_PRIVATE_KEY_PATH=/path/to/kalshi_private_key.pem

# ── The Odds API ────────────────────────────────────────────
# Get free API key: https://the-odds-api.com/
# Free tier: 500 requests/month
KALSHI_ODDS_ODDS_API_KEY=your-odds-api-key

# ── Scanner settings ────────────────────────────────────────
KALSHI_ODDS_KALSHI_SLIPPAGE_BUFFER=0.005  # 0.5% slippage buffer for Kalshi
KALSHI_ODDS_SPORTSBOOK_EXECUTION_FRICTION=0.01  # 1% friction for sportsbook
KALSHI_ODDS_MIN_EDGE_BPS=50.0  # Min 50 basis points (0.5%) edge to alert
KALSHI_ODDS_MIN_LIQUIDITY=10  # Min 10 shares liquidity
KALSHI_ODDS_MAX_STALENESS_SECONDS=60.0  # Max 60s data age

# ── Matching ────────────────────────────────────────────────
KALSHI_ODDS_MAPPING_FILE=mappings.yaml
KALSHI_ODDS_FUZZY_MATCH_ENABLED=false
KALSHI_ODDS_FUZZY_MATCH_THRESHOLD=0.75

# ── Output ──────────────────────────────────────────────────
KALSHI_ODDS_OUTPUT_JSONL=alerts.jsonl
